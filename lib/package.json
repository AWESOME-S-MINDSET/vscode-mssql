{
  "name": "aadlibrary",
  "version": "0.0.0",
  "description": "Library for ADS and mssql to call Azure Active Directory",
  "scripts": {
    "build": "yarn run build-ts && yarn run lint",
    "build-ts": "tsc",
    "watch": "concurrently \"npm:watch-client\" \"npm:watch-extensions\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Node\" \"ts-node-dev --inspect -- src/main.ts\" ",
    "watch-ts": "tsc -w",
    "compile": "gulp compile --max_old_space_size=4095",
    "test": "mocha"
  },
  "devDependencies": {
    "@types/mocha": "2.2.39",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.23.1"
  }
}
